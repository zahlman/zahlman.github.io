#!/usr/bin/bash

if [ $# -gt 0 ]; then
    case "$1" in
        clean)
            rm -r docs/ cache/ __pycache__/ .doit.db
            ;;
        *)
            echo "usage: '$0' | '$0 clean'"
            exit 1
            ;;
    esac
fi

nikola build
touch docs/.nojekyll
git add docs/
git commit -m "Rebuild site"
